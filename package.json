{
  "name": "@syfxlin/depker",
  "scripts": {
    "build:cli": "pnpm --filter @syfxlin/depker-cli build",
    "build:client": "pnpm --filter @syfxlin/depker-client build",
    "build:server": "pnpm --filter @syfxlin/depker-server build",
    "publish:cli": "pnpm --filter @syfxlin/depker-cli publish --access public --no-git-checks",
    "publish:client": "pnpm --filter @syfxlin/depker-client publish --access public --no-git-checks",
    "publish:server": "pnpm --filter @syfxlin/depker-server publish --access public --no-git-checks"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
